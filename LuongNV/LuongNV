CREATE DATABASE LuongNvien
GO
CREATE TABLE PhongBan (
    MaPB VARCHAR(7) PRIMARY KEY,
    TenPB NVARCHAR(50) NOT NULL
)
GO
CREATE TABLE NhanVien(
    MaNV VARCHAR(7) PRIMARY KEY,
    TenNV NVARCHAR(50) NOT NULL,
    NgaySinh DATETIME CHECK(NgaySinh < GETDATE()),
    SoCMND CHAR(9) ,
    GioiTinh CHAR(1) CHECK(GioiTinh='M' or GioiTinh='F'),
    DiaChi NVARCHAR(100) NOT NULL,
    NgayVaoLam DATETIME CHECK(NgayVaoLam > year(NgaySinh)+20),
    MaPB VARCHAR(7) FOREIGN KEY(PhongBan)
)
GO
CREATE TABLE LuongDA (
    MaDA VARCHAR(8) PRIMARY KEY,
    MaNV VARCHAR(7) PRIMARY KEY, FOREIGN KEY,
    NgayNhan DATETIME NOT NULL GETDATE(),
    SoTien MONEY CHECK(SoTien > 0)

)